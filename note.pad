styles{
    /* Reset and base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #e0f7fa, #e8f5e9);
  color: #333;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  transition: background 0.3s, color 0.3s;
}

/* Container */
.container {
  max-width: 600px;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 30px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  text-align: center;
}

/* Headings */
h1 {
  font-size: 2.5rem;
  color: #00695c;
  margin-bottom: 10px;
}

p {
  font-size: 1.2rem;
  color: #555;
  margin-bottom: 20px;
}

/* Buttons */
button, .btn {
  background-color: #00796b;
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: 12px;
  cursor: pointer;
  margin: 10px 5px;
  font-size: 1rem;
  transition: background-color 0.3s ease;
  text-decoration: none;
  display: inline-block;
}

button:hover, .btn:hover {
  background-color: #004d40;
}

/* Input fields */
input[type="username"],
select {
  width: 100%;
  padding: 12px;
  margin: 10px 0 20px;
  border: 1px solid #ccc;
  border-radius: 10px;
  outline: none;
  font-size: 1rem;
}

/* Responsive design */
@media screen and (max-width: 600px) {
  h1 {
    font-size: 2rem;
  }
  .container {
    padding: 20px;
  }
}

/* Dark mode toggle */
.dark-mode {
  background: #121212;
  color: #f1f1f1;
}

.dark-mode .container {
  background: rgba(30, 30, 30, 0.9);
}

.dark-mode button, .dark-mode .btn {
  background-color: #26a69a;
}

.dark-mode button:hover, .dark-mode .btn:hover {
  background-color: #1b9f90;
}

