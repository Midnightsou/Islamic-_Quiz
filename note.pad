/* ===== CRAZY MAD UI ðŸ”¥ ===== */
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500&family=Varela+Round&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Varela Round', sans-serif;
  background: linear-gradient(145deg, #0f2027, #203a43, #2c5364);
  color: #fff;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  transition: all 0.5s ease;
  overflow: hidden;
  position: relative;
}

/* Background animation */
body::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(0, 255, 200, 0.15), transparent 70%);
  animation: pulse 6s infinite;
  z-index: 0;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.6;
  }
}

/* Container */
.container {
  position: relative;
  z-index: 2;
  max-width: 600px;
  width: 100%;
  padding: 3rem;
  border-radius: 25px;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  box-shadow: 0 0 60px rgba(0, 255, 255, 0.3);
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Title */
h1 {
  font-family: 'Orbitron', sans-serif;
  font-size: 3rem;
  background: linear-gradient(to right, #00f2fe, #4facfe);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 1rem;
  letter-spacing: 1px;
}

/* Paragraph */
p {
  font-size: 1.2rem;
  color: #ccc;
  margin-bottom: 2rem;
}

/* Buttons */
.btn, button {
  display: inline-block;
  padding: 0.8rem 2rem;
  font-size: 1rem;
  border: none;
  border-radius: 12px;
  margin: 0.5rem;
  cursor: pointer;
  text-decoration: none;
  background: linear-gradient(90deg, #ff416c, #ff4b2b);
  color: white;
  box-shadow: 0 0 15px rgba(255, 65, 108, 0.5);
  transition: all 0.4s ease;
}

.btn:hover, button:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px rgba(255, 75, 43, 0.8);
}

/* Inputs */
input[type="text"], input[type="password"], input[type="email"] {
  width: 100%;
  padding: 1rem;
  margin: 1rem 0;
  border: none;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 1rem;
  outline: none;
  backdrop-filter: blur(10px);
}

input::placeholder {
  color: #eee;
}

/* Dark mode switch */
#darkToggle {
  background: linear-gradient(to right, #43e97b, #38f9d7);
  color: black;
  font-weight: bold;
  box-shadow: 0 0 20px rgba(67, 233, 123, 0.4);
}

#darkToggle:hover {
  transform: rotate(6deg) scale(1.03);
}

/* Responsive */
@media screen and (max-width: 600px) {
  h1 {
    font-size: 2rem;
  }
  .container {
    padding: 2rem;
  }
}
 